BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.33
            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 24
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
        text: app.output_km_text
